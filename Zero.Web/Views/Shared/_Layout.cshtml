@using Microsoft.AspNet.Identity
@using StackExchange.Profiling

<!DOCTYPE html>
<html lang="en">
<head>
	<title>Zero - @ViewBag.Title</title>
	<meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<meta http-equiv="x-ua-compatible" content="IE=edge,chrome=1; charset=utf-8" />
	@*<meta name="application-name" content="DevPerf" />
		<meta name="application-url" content="http://devperf.com" />
		<meta name="description" content="DevPerf is a service that calculates code performance" />
		<meta name="keywords" content="code,performance,optimization" />*@
	<meta name="google" content="notranslate" />

	<link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
</head>
<body>
	<div class="header">
		<div class="login">
			@if (Request.IsAuthenticated)
			{
				<div>
					<span>@User.Identity.GetUserName()</span>
					<span>@Html.ActionLink("Log Out", "Logout", "Account", null, new { id = "loginLink" })</span>
				</div>
			}
			else
			{
				<ul class="nav navbar-nav navbar-right">
					<li>@Html.ActionLink("Log In", "Login", "Account", null, new { id = "loginLink" })</li>
				</ul>
			}
		</div>
	</div>
	<div>
		@RenderBody()
	</div>
	@MiniProfiler.RenderIncludes()
	@RenderSection("scripts", false)
</body>
</html>
